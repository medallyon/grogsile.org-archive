<div class="navbar navbar-expand-lg navbar-dark bg-dark">
  
  <div class="container justify-content-between">
    
    <a class="navbar-brand" href="/">Grogsile, Inc.</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#default-navbar" aria-controls="default-navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <ul class="navbar-nav mr-auto">

      <li class="nav-item <% if (document.location === "/guilds") { %>active<% } %>">
        <a class="nav-link" href="/guilds">Overview <% if (document.location === "/guilds") { %><span class="sr-only">(current)</span><% } %></a>
      </li>

      <li class="nav-item dropdown">

        <a class="nav-link dropdown-toggle <% if (document.location !== "/guilds") { %>active<% } %>" href="#" id="navbar-dropdown-guilds" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Guilds
        </a>

        <div class="dropdown-menu" aria-labelledby="navbar-dropdown-guilds">

          <% for (let guild of user.guilds) { %>
            <a class="dropdown-item <% if (document.location === "/guilds/" + guild.id) { %>active<% } %>" href="https://bot.grogsile.org/guilds/<%- guild.id %>">
              <img src="https://cdn.discordapp.com/icons/<%- guild.id %>/<%- guild.icon %>.png" width="32" height="32" class="d-inline-block align-top rounded" alt="<%- guild.name %>">
              <%- guild.name %> <% if (document.location === "/guilds/" + guild.id) { %><span class="sr-only">(current)</span><% } %>
            </a>
          <% } %>

        </div>

      </li>

    </ul>

    <ul class="navbar-nav">
      
      <li class="nav-item">
        <a class="nav-link" href="https://bot.grogsile.org/logout">Sign Out</a>
      </li>

    </ul>

  </div>

</div>