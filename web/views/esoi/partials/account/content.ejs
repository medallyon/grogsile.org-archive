<div class="container">

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-lg-6">
      <% if (content.success) { %><div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-top: 2rem;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong>Successfully saved your settings!</strong>
      </div><% } %>
    </div>
    <div class="col-md-3"></div>
  </div>

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Adjust some settings for your account on ESOI</h1>
    </div>
  </section>

  <form id="accountForm" class="text-center" role="form" method="POST" enctype="application/json">

    <div class="form-group">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <label for="accountName">Account Name</label>
          <div class="input-group">

            <div class="input-group-addon">@</div>

            <input type="text" id="accountName" class="form-control text-center" autocomplete="off" pattern="[a-zA-Z0-9.-'_]{3,20}" name="accountName" value="<%- content.account.accountName %>" placeholder="<%- content.account.accountName %>" required>

          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-4">
          <label for="championInput">Champion Level</label>
          <div class="input-group">

            <input type="checkbox" id="championBox" name="champion" aria-label="Champion Input" <% if (content.account.champion) { %> checked <% } %>>
            <label for="championBox"></label>

            <% if (content.account.champion) { %><input type="number" id="championInput" name="level" class="form-control text-center" value="<%- content.account.level %>" min="1" max="600" placeholder="<%- content.account.level %>" required><% } %>
          </div>
          <p class="form-text text-muted">If you have achieved the champion level in-game (50), you should check this icon.</p>
        </div>

        <div class="col-md-4">
          <label for="about">About Yourself</label>
          <textarea class="form-control text-center" id="about" form="accountForm" name="about" rows="3" maxlength="500"><%- content.account.about %></textarea>
        </div>

        <div class="col-md-2"></div>

      </div>
    </div>

    <div class="row">
      <div class="col-md-6">

        <div class="form-group">
          <label>Mega-Server</label>
            <div class="row">
              <div class="col-md-12">
                <div class="form-check form-check-inline">
              
                  <input type="radio" id="eu" class="roster" name="server" value="EU" required <% if (content.account.server === "EU") { %> checked <% } %>>
                  <label for="eu"></label>
                  
                  <input type="radio" id="na" class="roster" name="server" value="NA" required <% if (content.account.server === "NA") { %> checked <% } %>>
                  <label for="na"></label>
                  
                </div>
              </div>
            </div>

        </div>

      </div>
      <div class="col-md-6">

        <div class="form-group">
          <label>Platform</label>
          <div class="row">
            
            <div class="col-md-12">
              <div class="form-check form-check-inline">
                
                <input type="radio" id="pc" class="roster" name="platform" value="PC" required <% if (content.account.platform === "PC") { %> checked <% } %>>
                <label for="pc"></label>
                
                <input type="radio" id="xbone" class="roster" name="platform" value="XBOne" required <% if (content.account.platform === "XBOne") { %> checked <% } %>>
                <label for="xbone"></label>
                
                <input type="radio" id="ps4" class="roster" name="platform" value="PS4" required <% if (content.account.platform === "PS4") { %> checked <% } %>>
                <label for="ps4"></label>
                
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>

    <div class="row">

      <div class="col-md-3"></div>

      <div class="col-md-6">
          
        <div class="form-group">
          <label>Preferred Alliance</label>
          <div class="row">
            
            <div class="col-md-12">
              <div class="form-check form-check-inline">
                
                <input type="radio" id="ad" class="roster" name="alliance" value="Aldmeri Dominion" required <% if (content.account.alliance === "Aldmeri Dominion") { %> checked <% } %>>
                <label for="ad"></label>
                
                <input type="radio" id="dc" class="roster" name="alliance" value="Daggerfall Covenant" required <% if (content.account.alliance === "Daggerfall Covenant") { %> checked <% } %>>
                <label for="dc"></label>
                
                <input type="radio" id="ep" class="roster" name="alliance" value="Ebonheart Pact" required <% if (content.account.alliance === "Ebonheart Pact") { %> checked <% } %>>
                <label for="ep"></label>
                
              </div>
            </div>

          </div>
        </div>

      </div>

      <div class="col-md-3"></div>

    </div>

    <button type="submit" class="btn btn-lg">Submit</button>

  </form>

</div>