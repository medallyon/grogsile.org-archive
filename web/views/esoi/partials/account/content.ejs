<div class="container">

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <% if (content.success) { %><div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-top: 2rem;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <strong>Successfully saved your settings!</strong>
      </div><% } %>
    </div>
  </div>

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Adjust some settings for your account on ESOI</h1>
    </div>
  </section>

  <form id="accountForm" class="text-center" role="form" method="POST" enctype="application/json">

    <div class="form-group">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <label for="accountName">Account Name</label>
          <div class="input-group">

            <div class="input-group-addon">@</div>

            <input type="text" id="accountName" class="form-control text-center" autocomplete="off" pattern="[a-zA-Z0-9\.\-'_]{3,20}" name="accountName" value="<% if (account.accountName !== "undefined") { %><%- content.account.accountName %><% } %>" placeholder="RinkydinkFrumblesnatch123" required>

          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-4">
          <label for="championInput">Champion Level</label>
          <div class="input-group">

            <input type="checkbox" id="championBox" name="champion" aria-label="Champion Input" <% if (content.account.champion) { %> checked <% } %>>
            <label for="championBox" data-toggle="tooltip" data-placement="top" title="" data-original-title="Champion Level"></label>

            <% if (content.account.champion) { %><input type="number" id="championInput" name="level" class="form-control text-center" value="<%- content.account.level %>" min="1" max="690" placeholder="<%- content.account.level %>" required><% } %>
          </div>
          <p class="form-text text-muted">If you have achieved level 50 in-game, you should check this icon.</p>
        </div>

        <div class="col-md-4">
          <label for="about">About Yourself</label>
          <textarea class="form-control text-center" id="about" form="accountForm" name="about" autocomplete="false" spellcheck="false" rows="3" maxlength="500"><%- content.account.about %></textarea>
        </div>

        <div class="col-md-2"></div>

      </div>
    </div>

    <div class="row">
      <div class="col-md-4">

        <div class="form-group">
          <label>Mega-Server</label>
            <div class="row">
              <div class="col-md-12">
                <div class="form-check form-check-inline">
              
                  <input type="radio" id="eu" class="roster" name="server" value="EU" required <% if (content.account.server === "EU") { %> checked <% } %>>
                  <label for="eu" data-toggle="tooltip" data-placement="top" title="" data-original-title="Europe"></label>
                  
                  <input type="radio" id="na" class="roster" name="server" value="NA" <% if (content.account.server === "NA") { %> checked <% } %>>
                  <label for="na" data-toggle="tooltip" data-placement="top" title="" data-original-title="North America"></label>
                  
                </div>
              </div>
            </div>

        </div>

      </div>
      <div class="col-md-4">
          
        <div class="form-group">
          <label>Preferred Alliance <small>(Optional)</small></label>
          <div class="row">
            
            <div class="col-md-12">
              <div class="form-check form-check-inline">
                
                <input type="checkbox" id="ad" class="roster" name="alliance" value="Aldmeri Dominion" <% if (content.account.alliance === "Aldmeri Dominion") { %> checked <% } %>>
                <label for="ad" data-toggle="tooltip" data-placement="top" title="" data-original-title="Aldmeri Dominion"></label>
                
                <input type="checkbox" id="dc" class="roster" name="alliance" value="Daggerfall Covenant" <% if (content.account.alliance === "Daggerfall Covenant") { %> checked <% } %>>
                <label for="dc" data-toggle="tooltip" data-placement="top" title="" data-original-title="Daggerfall Covenant"></label>
                
                <input type="checkbox" id="ep" class="roster" name="alliance" value="Ebonheart Pact" <% if (content.account.alliance === "Ebonheart Pact") { %> checked <% } %>>
                <label for="ep" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ebonheart Pact"></label>
                
              </div>
            </div>

          </div>
        </div>

      </div>
      <div class="col-md-4">

        <div class="form-group">
          <label>Platform</label>
          <div class="row">
            
            <div class="col-md-12">
              <div class="form-check form-check-inline">
                
                <input type="radio" id="pc" class="roster" name="platform" value="PC" required <% if (content.account.platform === "PC") { %> checked <% } %>>
                <label for="pc" data-toggle="tooltip" data-placement="top" title="" data-original-title="PC"></label>
                
                <input type="radio" id="xbone" class="roster" name="platform" value="XBOne" <% if (content.account.platform === "XBOne") { %> checked <% } %>>
                <label for="xbone" data-toggle="tooltip" data-placement="top" title="" data-original-title="XBox One"></label>
                
                <input type="radio" id="ps4" class="roster" name="platform" value="PS4" <% if (content.account.platform === "PS4") { %> checked <% } %>>
                <label for="ps4" data-toggle="tooltip" data-placement="top" title="" data-original-title="PlayStation 4"></label>
                
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>

    <div class="row justify-content-center">

      <div class="col-md-8">

        <div class="form-group">
          <label><b>Other Settings</b></label>

          <div class="abc-checkbox">
            <input type="checkbox" id="private" name="private" <% if (content.account.private) { %> checked <% } %>>
            <label for="private">Make my profile <span class="text-muted">invisible</span> to others</label>
          </div>

          <div class="abc-checkbox">
            <input type="checkbox" id="updates" name="updates" <% if (content.account.updates) { %> checked <% } %>>
            <label for="updates">Get notified on the <a href="https://esoi.grogsile.org/discord">ESOI Discord Server</a> whenever an ESO Server goes off- or online</label>
          </div>

          <div class="abc-checkbox">
            <input type="checkbox" id="nickname" name="nickname" <% if (content.account.nickname) { %> checked <% } %>>
            <label for="nickname">Reflect your Platform [PC|PS4|XB1] as part of your nickname on the ESOI Discord Server</label>
          </div>

        </div>

      </div>

    </div>

    <button type="submit" class="btn btn-lg">Submit</button>

  </form>

</div>