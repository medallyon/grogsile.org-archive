<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Welcome Home, <b><%- user.username %></b></h1>
    <p class="lead text-muted">This is your dashboard.</p>
  </div>
</section>

<div class="album text-muted">

  <div class="container">

    <div class="row justify-content-center">
      <div class="col-md-6" style="text-align: center;">
        <% if (Object.keys(characters).length > 0) { %><h2>Your Characters</h2><% } else { %><h4>This is where your characters would go. If you had any.</h4>
        <p class="pt-4">
          <a class="btn btn-lg btn-info" href="/new?type=character">Why not create one?</a>
        </p><% } %>
      </div>
    </div>

    <% if (Object.keys(characters).length) { %><div class="row justify-content-center">

      <% for (let character in characters) { %><div class="card">
        <% let char = characters[character]; %>
        <img src="<%- char.avatarURL %>" alt="<%- char.name %> image">
        <h5 class="text-center"><%- char.name %></h5>
        <p class="card-text">
          <% if (char.champion) { %><span class="champion"></span><%- user.level %><% } else { %>Level <%- char.level %><% } %><br>
        </p>
      </div><% } %>

    </div><% } %>

  </div>
</div>